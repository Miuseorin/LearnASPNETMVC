@model IEnumerable<WebApplication1.Models.BubleTea>

@{
    ViewBag.Title = "Index";
}

<h2>VL Tea</h2>

<p>
  <a herf ="@Url.Action("Create")">Them moi</a>
</p>
<table class="table">
    <tr>
        <th>
            Trà sữa
        </th>
        <th>
            Chi tiết
        </th>
        <th>
            Giá tiền
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <mark>@item.Name</mark>
        </td>
        <td>
            @item.Topping
        </td>
        <td>
           @item.Price.ToString("N0")
        </td>
        <td>
           <a href="@Url.Action("Edit",new {id = item.id})"> Sửa</a>
           <a href="@Url.Action("Details", new { id = item.id })"> Chi tiết</a>
           <a href="@Url.Action("Delete", new { id = item.id })"> Xóa</a>
        </td>
    </tr>
}

</table>
